{
  "compilerOptions": {
    "target": "ES2022",
    "experimentalDecorators": true,
    "useDefineForClassFields": false,

    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,

    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,
    "types": ["node"],

    "jsx": "react-jsx",

    "isolatedModules": true,
    "moduleDetection": "force",
    "allowJs": true,

    "noEmit": true
  }
}
