{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "additionalProperties": false,
  "properties": {
    "changes": {
      "items": {
        "additionalProperties": true,
        "properties": {
          "change_type": {
            "enum": [
              "added",
              "modified",
              "deleted",
              "renamed",
              "copied"
            ],
            "type": "string"
          },
          "path": {
            "minLength": 1,
            "type": "string"
          },
          "reason": {
            "minLength": 1,
            "type": "string"
          },
          "sha256": {
            "minLength": 1,
            "type": "string"
          }
        },
        "required": [
          "path",
          "change_type",
          "reason",
          "sha256"
        ],
        "type": "object"
      },
      "type": "array"
    },
    "owner": {
      "minLength": 1,
      "type": "string"
    },
    "noop": {
      "type": "boolean"
    },
    "noop_ack": {
      "type": "string"
    },
    "noop_reason": {
      "type": "string"
    },
    "run_id": {
      "minLength": 1,
      "type": "string"
    },
    "schema_version": {
      "minimum": 1,
      "type": "integer"
    }
  },
  "required": [
    "schema_version",
    "run_id",
    "owner",
    "changes"
  ],
  "anyOf": [
    {
      "properties": {
        "changes": {
          "minItems": 1
        }
      }
    },
    {
      "properties": {
        "noop": {
          "const": true
        },
        "noop_ack": {
          "minLength": 1
        },
        "noop_reason": {
          "minLength": 1
        }
      },
      "required": [
        "noop",
        "noop_reason",
        "noop_ack"
      ]
    }
  ],
  "title": "Files Changed",
  "type": "object"
}
